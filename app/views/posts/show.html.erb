<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p>
        <%= @post.content %>
      </p>
      <div>
        <%= link_to "reply", new_post_comment_path(@post) %>
        <% if current_or_guest_user.id == @post.user_id %>
          <%= link_to "delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want delete this post"} %>
        <% end %>
      </div>
      <div>
        <%= link_to "Home", root_url, class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  </div>
</div>
