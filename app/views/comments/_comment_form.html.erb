<div class="row">
  <div class="col-md-12">
    <%= form_for post.comments.build, url: post_comments_path(post) do |f| %>
      <%= f.hidden_field :user_id, value: current_or_guest_user.id %>
      <div class="form-group">
        <%= f.text_area :content, class: "form-control", placeholder: "Add a comment" %>
      </div>
        <%= f.submit "Add Comment", class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>