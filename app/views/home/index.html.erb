<div class="container home">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">
        Welcome to WickedCool Blog!
      </h1>
    </div>
  </div>

  <div class="row">
    <%= form_for(@post) do |f| %>
        <div class="form-group">
          <%= f.text_area :content, placeholder: "Submit a blog post...", id: "post", type: "text", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Post", id: "submit", class: "btn btn-lg btn-success" %>
        </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h2>Posts</h2>
      <ul>
        <%= render @posts %>
      </ul>
    </div>
  </div>
</div>

